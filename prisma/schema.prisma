datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  firstName     String
  lastName      String?
  avatarUrl     String?
  timezone      String?

  passwordHash  String
  isActive      Boolean  @default(true)
  lastLoginAt   DateTime?

  chats         Chat[]

  createdDate   DateTime @default(now())
  updatedDate   DateTime @updatedAt

  @@map("users")
}

model Chat {
  id                String    @id @default(uuid())
  userId            String
  summary           String?
  memoryConfidence  Float?

  user              User      @relation(fields: [userId], references: [id])
  messages          Message[]

  createdDate       DateTime  @default(now())
  updatedDate       DateTime  @updatedAt

  @@map("chats")
}

model Message {
  id          String   @id @default(uuid())
  chatId      String
  role        String
  content     String   @db.LongText

  chat        Chat     @relation(fields: [chatId], references: [id])

  createdDate DateTime @default(now())
  updatedDate DateTime @updatedAt

  @@map("messages")
}
